<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Network Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Notification Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Biometric Permission -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Audio Recording Permission -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Camera Permission for Video Calls -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera and Microphone Features -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <application
        android:name=".ZubidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <!-- Login Activity - Launcher -->
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Splash"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".ui.activity.RegisterActivity"
            android:label="Register"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".ui.activity.ForgotPasswordActivity"
            android:label="Forgot Password"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Auction Detail Activity -->
        <activity
            android:name=".ui.activity.AuctionDetailActivity"
            android:label="Auction Details"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Profile Activity -->
        <activity
            android:name=".ui.activity.ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme" />

        <!-- Settings Activity -->
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme" />

        <!-- Help Activity -->
        <activity
            android:name=".ui.activity.HelpActivity"
            android:label="@string/help_support"
            android:theme="@style/AppTheme" />

        <!-- Payment Activity -->
        <activity
            android:name=".ui.activity.PaymentActivity"
            android:label="Payment"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Messages Activity -->
        <activity
            android:name=".ui.activity.MessagesActivity"
            android:label="Messages"
            android:theme="@style/AppTheme" />

        <!-- Chat Activity -->
        <activity
            android:name=".ui.activity.ChatActivity"
            android:label="Chat"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Video Call Activity -->
        <activity
            android:name=".ui.activity.VideoCallActivity"
            android:label="Video Call"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize" />

        <!-- Incoming Call Activity -->
        <activity
            android:name=".ui.activity.IncomingCallActivity"
            android:label="Incoming Call"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />

        <!-- FileProvider for camera images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Firebase Messaging Service -->
        <service
            android:name=".service.ZubidFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Default notification channel -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="zubid_notifications" />

        <!-- Notification icon and color -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/coral" />

    </application>

</manifest>
