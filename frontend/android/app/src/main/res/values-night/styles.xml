<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ZUBID Dark Theme - Samsung One UI Blue -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Brand Colors - Samsung Blue Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/bg_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/bg_primary</item>
        <item name="colorSurface">@color/bg_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status Bar - Dark -->
        <item name="android:statusBarColor">@color/bg_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar - Dark -->
        <item name="android:navigationBarColor">@color/bg_secondary</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Edge-to-edge -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/bg_card</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:background">@color/bg_card</item>
    </style>

</resources>

