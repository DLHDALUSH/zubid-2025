<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/message_bubble_received"
        android:padding="12dp"
        android:maxWidth="280dp">

        <!-- Image (for image messages) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_image_placeholder" />
        </androidx.cardview.widget.CardView>

        <!-- Voice message layout -->
        <LinearLayout
            android:id="@+id/voiceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/btnPlayVoice"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_play"
                app:tint="@color/primary"
                android:contentDescription="@string/play" />

            <View
                android:layout_width="80dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/text_muted" />

            <TextView
                android:id="@+id/tvVoiceDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:15"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello!"
            android:textColor="@color/message_received_text"
            android:textSize="15sp" />

        <!-- Reactions -->
        <TextView
            android:id="@+id/tvReactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="ðŸ‘ â¤ï¸" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:text="12:30"
            android:textColor="@color/text_muted"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>

