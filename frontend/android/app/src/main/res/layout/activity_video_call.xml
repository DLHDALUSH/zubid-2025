<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Remote Video (Full Screen) -->
    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A">

        <!-- Placeholder when video is off -->
        <LinearLayout
            android:id="@+id/remoteVideoPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivRemoteAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvRemoteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Ahmed" />

            <TextView
                android:id="@+id/tvCallStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                tools:text="Connecting..." />
        </LinearLayout>
    </FrameLayout>

    <!-- Local Video (Small Preview) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/localVideoCard"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <FrameLayout
            android:id="@+id/localVideoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333">

            <ImageView
                android:id="@+id/ivLocalPlaceholder"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_video_off"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- Flip Camera Button -->
        <ImageButton
            android:id="@+id/btnFlipCamera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="8dp"
            android:background="@drawable/bg_call_button"
            android:src="@drawable/ic_flip_camera"
            android:contentDescription="@string/flip_camera" />
    </androidx.cardview.widget.CardView>

    <!-- Call Duration -->
    <TextView
        android:id="@+id/tvCallDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_call_button"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="00:00"
        tools:visibility="visible" />

    <!-- Call Controls -->
    <LinearLayout
        android:id="@+id/callControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="24dp">

        <!-- Mute Button -->
        <ImageButton
            android:id="@+id/btnMute"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_call_button"
            android:src="@drawable/ic_mic"
            android:contentDescription="@string/mute"
            app:tint="@color/white" />

        <!-- End Call Button -->
        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_call_end_button"
            android:src="@drawable/ic_call_end"
            android:contentDescription="@string/end_call"
            app:tint="@color/white" />

        <!-- Video Toggle Button -->
        <ImageButton
            android:id="@+id/btnToggleVideo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_call_button"
            android:src="@drawable/ic_video_call"
            android:contentDescription="@string/toggle_video"
            app:tint="@color/white" />
    </LinearLayout>
</FrameLayout>

