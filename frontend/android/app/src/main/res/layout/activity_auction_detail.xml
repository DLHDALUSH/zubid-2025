<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image with overlay buttons -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/auctionImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/bg_card" />

                <!-- Top bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_back"
                        android:background="@drawable/circle_bg_dark"
                        android:padding="10dp"
                        app:tint="@color/white" />

                    <!-- Live/Connection Status -->
                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/live"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_live_indicator"
                        android:layout_marginStart="12dp"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnWishlist"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_heart_outline"
                        android:background="@drawable/circle_bg_dark"
                        android:padding="10dp"
                        app:tint="@color/coral"
                        android:layout_marginEnd="8dp" />

                    <ImageButton
                        android:id="@+id/btnShare"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_share"
                        android:background="@drawable/circle_bg_dark"
                        android:padding="10dp"
                        app:tint="@color/white" />
                </LinearLayout>

            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/auctionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auction Item Title"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Description Section -->
                <TextView
                    android:id="@+id/tvDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/description"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Item description will appear here..."
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.2" />

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/price_badge_bg"
                    android:padding="12dp">

                    <!-- Real Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/real_price"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvRealPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1,500.00"
                            android:textColor="@color/success"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/divider" />

                    <!-- Market Price -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/market_price"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMarketPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$2,000.00"
                            android:textColor="@color/text_muted"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Current Bid and Timer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_bid"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/currentPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1,250.00"
                            android:textColor="@color/coral"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bidCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 bids"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp" />

                        <!-- Live bid indicator -->
                        <TextView
                            android:id="@+id/tvLiveBidIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_bid_placed"
                            android:textColor="@color/coral"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/time_left"
                            android:textColor="@color/text_muted"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/timeRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2h 30m 45s"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@drawable/timer_badge_bg"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Bid Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <EditText
                        android:id="@+id/inputBidAmount"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@drawable/input_bg"
                        android:hint="Enter bid amount"
                        android:textColorHint="@color/text_muted"
                        android:textColor="@color/text_primary"
                        android:paddingHorizontal="16dp"
                        android:inputType="numberDecimal"
                        android:layout_marginEnd="12dp" />

                    <Button
                        android:id="@+id/btnPlaceBid"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Place Bid"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/button_primary"
                        android:paddingHorizontal="24dp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="16dp" />

                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Buy Now"
                    android:textColor="@color/coral"
                    android:textAllCaps="false"
                    android:background="@drawable/button_outline"
                    android:layout_marginTop="16dp" />

                <!-- Contact Seller Button -->
                <Button
                    android:id="@+id/btnContactSeller"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/contact_seller"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/bg_card"
                    android:layout_marginTop="12dp"
                    android:drawableStart="@drawable/ic_message"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/coral" />

                <!-- Bid History Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bid_history"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvShowAllBids"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hide_bids"
                            android:textColor="@color/coral"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackground" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBidHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/tvNoBids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/no_bids_yet"
                        android:textColor="@color/text_muted"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

