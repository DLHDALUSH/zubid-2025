<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="false">
        <!-- Production domain -->
        <domain includeSubdomains="true">zubidauction.duckdns.org</domain>
        <!-- Development domain -->
        <domain includeSubdomains="true">zubid-2025.onrender.com</domain>
        <!-- Staging domain -->
        <domain includeSubdomains="true">zubid-staging.onrender.com</domain>
        
        <pin-set expiration="2025-12-31">
            <!-- Add certificate pins for production -->
            <!-- <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin> -->
        </pin-set>
    </domain-config>
    
    <!-- Allow cleartext traffic for localhost during development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Base configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate authorities -->
            <certificates src="system"/>
            <!-- Trust user-added certificate authorities -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
