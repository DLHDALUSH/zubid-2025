# ZUBID Backend Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security
# IMPORTANT: REQUIRED in production! Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
# In production, this MUST be set or the server will fail to start
SECRET_KEY=your-secret-key-change-in-production

# CSRF Protection
# In production, CSRF is enabled by default. Set to false to disable (NOT RECOMMENDED)
# In development, CSRF is disabled by default
CSRF_ENABLED=

# Admin User Configuration (REQUIRED in production if no admin exists)
# Only used when creating the initial admin user
# In production, these MUST be set if no admin user exists
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@zubid.com
ADMIN_ID_NUMBER=ADMIN001

# Rate Limiting
# Set to true to enable rate limiting (recommended for production)
RATE_LIMIT_ENABLED=true
# Use Redis for production: redis://localhost:6379/0
# Use memory for development: memory://
RATELIMIT_STORAGE_URL=memory://

# Database
# For SQLite: sqlite:///auction.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql+pymysql://user:password@localhost/dbname
DATABASE_URI=sqlite:///auction.db

# CORS Configuration
# Development: Use * (allows all origins)
# Production: Comma-separated list of allowed origins, e.g.:
# CORS_ORIGINS=http://localhost:8080,https://yourdomain.com
CORS_ORIGINS=*

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Base URL for generating absolute URLs (for image uploads, etc.)
# Production: https://yourdomain.com
# Development: http://localhost:5000
BASE_URL=http://localhost:5000

# HTTPS Configuration
# Set to true if HTTPS is enabled (via Nginx/Apache)
HTTPS_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Upload Configuration
UPLOAD_FOLDER=uploads

# Gunicorn Configuration (for production)
WORKERS=4
TIMEOUT=120
UPLOAD_FOLDER=uploads

