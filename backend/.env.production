# ZUBID Production Environment Configuration
# This file contains production-ready settings for the DuckDNS server
# Copy this to .env on the production server

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Security - CRITICAL: Generate a secure secret key
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-production-secret-key-change-this-immediately

# CSRF Protection (enabled by default in production)
CSRF_ENABLED=true

# Admin User Configuration
# These are used only when creating the initial admin user
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin123!@#
ADMIN_EMAIL=admin@zubidauction.duckdns.org
ADMIN_ID_NUMBER=ADMIN001

# Rate Limiting (enabled for production)
RATE_LIMIT_ENABLED=true
# Use Redis for production if available, otherwise memory
RATELIMIT_STORAGE_URL=memory://

# Database Configuration
# For production, consider using PostgreSQL or MySQL
# SQLite: sqlite:///auction.db
# PostgreSQL: postgresql://user:password@localhost/zubid_production
# MySQL: mysql+pymysql://user:password@localhost/zubid_production
DATABASE_URI=sqlite:///auction.db

# CORS Configuration - IMPORTANT: Restrict to your domains only
CORS_ORIGINS=https://zubidauction.duckdns.org,https://zubid-2025.onrender.com

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Base URL for generating absolute URLs
BASE_URL=https://zubidauction.duckdns.org

# HTTPS Configuration (enabled for DuckDNS with SSL)
HTTPS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Upload Configuration
UPLOAD_FOLDER=uploads

# Gunicorn Configuration
WORKERS=4
TIMEOUT=120

# Security Headers (handled by Nginx/Apache in production)
# These are set by the reverse proxy
SECURE_HEADERS=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Production Optimizations
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_RECORD_QUERIES=False

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION=7

# Monitoring (optional)
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# Email Configuration (optional - for notifications)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@zubidauction.duckdns.org

# Notification Settings
ADMIN_EMAIL_NOTIFICATIONS=true
USER_EMAIL_NOTIFICATIONS=false

# Performance Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# File Upload Limits
MAX_CONTENT_LENGTH=16777216
MAX_IMAGE_SIZE=5242880
MAX_VIDEO_SIZE=52428800

# API Rate Limits
API_RATE_LIMIT=100/hour
UPLOAD_RATE_LIMIT=10/hour

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.
