{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-var": "warn",
    "prefer-const": "warn",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-throw-literal": "error",
    "no-undef": "error",
    "no-unused-expressions": "warn"
  },
  "globals": {
    "AuctionAPI": "readonly",
    "UserAPI": "readonly",
    "CategoryAPI": "readonly",
    "PaymentAPI": "readonly",
    "showToast": "readonly",
    "currentUser": "writable",
    "html5QrcodeScanner": "writable"
  }
}

